<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialActivityHw4"
    android:orientation="vertical"
    android:background="#1700BCD4"
    android:gravity="center_horizontal"
    >

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/movie"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="15dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/edtMovieName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#4300BCD4"
            android:hint="Find Movies"
            android:inputType="text"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnImdbSearch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="#E6009688"
            android:textColor="#FFF"
            android:text="Search"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="bold"

            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ImdbRecycler"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="left"
        android:background="#1700BCD4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>